<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/skyyel2"
        >

<TextView
android:id="@+id/textView_amsong_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Large Text"
android:textColor="#530D0D"
android:textSize="11pt"
android:textStyle="bold"
android:shadowColor="#FFC800"
android:shadowRadius="1"
android:shadowDx="1"
android:shadowDy="1"
android:textAppearance="?android:attr/textAppearanceLarge"
/>

    <TextView
            android:id="@+id/textView_amsong_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

    <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    <Button
            android:id="@+id/button_hint"
            android:layout_width="fill_parent"
            android:layout_height="35px"
            android:layout_alignParentBottom="true"
            android:paddingTop="7dp"
            android:background="@drawable/bridge_button"
            style="@style/ButtonText"
            android:text="@string/t_hint"
            />
    <Button
            android:id="@+id/button_answer"
            android:layout_width="fill_parent"
            android:layout_height="35px"
            android:layout_alignParentBottom="true"
            android:paddingTop="7dp"
            android:background="@drawable/mint_button"
            style="@style/ButtonText"
            android:text="@string/t_answer"
            />
</LinearLayout>



